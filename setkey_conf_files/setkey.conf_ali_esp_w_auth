#!/usr/sbin/setkey -f

## config file for Alice

## flush SAD and SPD
flush;
spdflush;

## add SAs in SAD
add 10.0.0.1 10.0.0.2 esp 0x1000 -E aes-cbc 0xaa223344556677889900aabbccddeeff -A hmac-sha1 0xaa223344556677889900aabbccddeeff12345678;
add 10.0.0.2 10.0.0.1 esp 0x2000 -E aes-cbc 0xbb223344556677889900aabbccddeeff -A hmac-sha1 0xbb223344556677889900aabbccddeeff12345678;

## add SPs in SPD
spdadd 10.0.0.1 10.0.0.2 any -P out ipsec esp/transport//require;
spdadd 10.0.0.2 10.0.0.1 any -P in  ipsec esp/transport//require;
